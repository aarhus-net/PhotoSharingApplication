@model PhotoSharingApplication.Models.Photo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Display</title>
</head>
<body>
<div>
    <img src="@Url.Action("GetImage", "Photo", new {id = Model.Id})" width="800px"/>
