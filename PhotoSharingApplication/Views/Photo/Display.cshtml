@model PhotoSharingApplication.Models.Photo
@{
    ViewBag.Title = @Model.Title;

}

<img src="@Url.Action("GetImage", "Photo", new {id = Model.Id})" width="800px" />
<div class="photo-metadata">
    <p>
        @Html.DisplayFor(m => m.Description)
    </p>
    <p>
        @Html.DisplayNameFor(m => m.UserName)
        @Html.DisplayFor(m => m.UserName)
    </p>
    <p>
        @Html.DisplayNameFor(m => m.CreatedDate)
        @Html.DisplayFor(m => m.CreatedDate)
    </p>
    <div id="addtofavorites">
        @Ajax.ActionLink("Add this photo to your favorites",
            "AddFavorite", "Photo", new { photoId = Model.Id },
            new AjaxOptions
            {
                UpdateTargetId = "addtofavorites",
                HttpMethod = "GET",
                InsertionMode = InsertionMode.Replace
            })
    </div>
</div>
@Html.Action("_CommentsForPhoto", "Comment", new { photoId = Model.Id })
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
